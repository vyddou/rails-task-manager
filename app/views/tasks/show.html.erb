<h1><%= @task.title %></h1>

<p><strong>Détails :</strong> <%= @task.details %></p>
<p><strong>Statut :</strong> <%= @task.completed ? "✅ Terminée" : "❌ En cours" %></p>

<%= link_to "Modifier", edit_task_path(@task), class: "btn btn-primary" %>
<%= link_to "Supprimer",
            task_path(@task),  # Changé de 'task' à '@task'
            method: :delete,
            data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" },
            class: "btn btn-danger" %>

<%= link_to "Retour à la liste", tasks_path, class: "btn btn-secondary" %>
