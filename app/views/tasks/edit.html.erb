<h1>Modifier la tâche</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.check_box :completed %>
    <%= f.label :completed, "Terminée" %>
  </div>

  <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
<% end %>

<%= link_to "Annuler", task_path(@task) %>
