<div class="task-card">
  <div class="card">
    <div class="card-header text-white" style="background-color: #2A6329;">
      <h1 class="h4 mb-0 text-center">
        <%= action_name == 'new' ? "Créer une nouvelle tâche" : "Modifier la tâche" %>
      </h1>
    </div>

    <div class="card-body">
      <%= form_with model: @task, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Titre", class: "form-label" %>
          <%= f.text_field :title, class: "form-control form-control-lg" %>
        </div>

        <div class="mb-4">
          <%= f.label :details, "Détails", class: "form-label" %>
          <%= f.text_area :details, class: "form-control", rows: 4 %>
        </div>

        <% if action_name == 'edit' %>
          <div class="mb-4 form-check form-switch">
            <%= f.check_box :completed, class: "form-check-input" %>
            <%= f.label :completed, "Tâche terminée", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="d-grid gap-2">
          <%= f.submit action_name == 'new' ? "Créer" : "Mettre à jour",
                       class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>

    <div class="card-footer bg-light text-center">
      <%= link_to tasks_path, class: "text-decoration-none" do %>
        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
      <% end %>
    </div>
  </div>
</div>
