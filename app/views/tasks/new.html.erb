<h1>Nouvelle tâche</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <%= f.submit "Créer la tâche" %>
<% end %>

<%= link_to "Annuler", tasks_path %>

